---
const { title = "My Pet", description = "桌寵官網" } = Astro.props;

// 透過環境變數控制是否載入 AdSense（避免本地開發報錯/審核期）
const ADSENSE_CLIENT = import.meta.env.PUBLIC_ADSENSE_CLIENT ?? "";
---

<html lang="zh-Hant">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    {ADSENSE_CLIENT && (
      // 官方建議 async；用 data-ad-client 就好，不要在本地打
      <script
        async
        src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"
        data-ad-client={ADSENSE_CLIENT}
      ></script>
    )}

    {/* 基本樣式：可換成你的 CSS */}
    <style>
      :root { --max: 1080px; }
      body { margin: 0; font-family: ui-sans-serif, system-ui; color: #222; }
      header, main, footer { display:block; }
      .wrap { max-width: var(--max); margin: 0 auto; padding: 16px; }
      .grid { display:grid; grid-template-columns: 1fr 1fr; gap: 24px; }
      @media (max-width: 920px) { .grid { grid-template-columns: 1fr; } }
      .muted { color:#666; }
      .card { border:1px solid #eee; border-radius:12px; padding:16px; }
    </style>
  </head>
  <body>
    <header class="wrap">
      <h1 style="margin: 12px 0">My Pet</h1>
      <p class="muted">可愛、佛系、可贊助不強求 ( ˘•ω•˘ )</p>
    </header>
    <main class="wrap">
      <slot />
    </main>
    <footer class="wrap muted" style="padding-bottom:48px">
      <p>© {new Date().getFullYear()} My Pet · <a href="/privacy">Privacy</a></p>
    </footer>
  </body>
</html>
